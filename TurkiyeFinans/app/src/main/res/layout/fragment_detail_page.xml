<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivDetail"
                android:layout_width="@dimen/padding_100dp"
                android:layout_height="@dimen/padding_50dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_20dp"
                android:layout_marginBottom="@dimen/padding_20dp"/>
            <TextView
                android:id="@+id/tvArtistNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:textSize="28sp"
                android:textColor="@color/text_color_blue"
                tools:text="Jack Johnson"/>

            <TextView
                android:id="@+id/tvProductNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="5"
                android:textSize="28sp"
                android:textColor="@color/text_color_blue_2"
                tools:text="To the Sea"/>

            <Button
                android:id="@+id/btnUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_40dp"
                android:text="@string/btn_click_url"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>